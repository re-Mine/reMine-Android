<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!-- 상단바 제거 -->
        <item name="windowNoTitle">true</item>
        <!-- 색상 변경 -->
        <item name="colorPrimary">#FBBC05</item>
        <!-- item name="colorPrimary">@color/purple_500</item -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- 상태바 색상 변경-->
        <item name="android:statusBarColor">#FBBC05</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- API 31+ specific attributes -->
        <item name="android:windowSplashScreenBackground">#FFF0F2</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/icon_splash</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
        <item name="android:windowSplashScreenBrandingImage">@mipmap/icon_splash</item>
    </style>

    <style name="Widget.MyApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- 클릭 시 표시되는 그림자 효과 비활성화 -->
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
    </style>
</resources>