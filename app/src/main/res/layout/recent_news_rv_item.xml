<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recentNews1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/layout_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProfile1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:src="@drawable/profile_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="닉네임" />

                <TextView
                    android:id="@+id/creationTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="n분 전" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/contents1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:text="치료를 고민하고 계신 분들께 .. 제가 최근 5년간 치료받았던 후기를 말씀드리고자 합니다.
처음엔 저도 재활 시작을 많이 고민했어요 ..." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconEmoji1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_emoji" />

            <ImageView
                android:id="@+id/iconComment1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_comment" />
        </LinearLayout>

    </LinearLayout>

