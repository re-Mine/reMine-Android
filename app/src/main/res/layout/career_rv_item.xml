<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageCareerGed"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/career_ged"/>

    <ImageView
        android:id="@+id/imageCareerComputer"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/career_computer"/>

    <ImageView
        android:id="@+id/imageCareerInterview"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/career_interview"/>


</LinearLayout>