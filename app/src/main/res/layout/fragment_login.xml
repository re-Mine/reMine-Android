<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context=".login.LoginFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="145dp"
        android:background="@drawable/logo"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_login" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_login_et"
            android:hint="아이디"
            android:paddingHorizontal="20dp"/>
        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/et_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_login_et"
            android:hint="비밀번호"
            android:paddingHorizontal="20dp"/>
        <TextView
            android:id="@+id/tv_login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@id/et_pw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="로그인"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_login_btn_blue"
            android:paddingHorizontal="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_login"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="16sp"
            android:textColor="#707070"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_find_pw"/>
        <TextView
            android:id="@+id/tv_find_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textSize="16sp"
            android:textColor="#707070"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_signup"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="16sp"
            android:textColor="#707070"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_signup"
            app:layout_constraintRight_toLeftOf="@id/tv_find_pw"/>
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#707070"
            app:layout_constraintTop_toTopOf="@id/tv_simple_login"
            app:layout_constraintBottom_toBottomOf="@id/tv_simple_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_simple_login"/>
        <TextView
            android:id="@+id/tv_simple_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간편 로그인"
            android:textSize="16sp"
            android:textColor="#707070"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_signup"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#707070"
            app:layout_constraintTop_toTopOf="@id/tv_simple_login"
            app:layout_constraintBottom_toBottomOf="@id/tv_simple_login"
            app:layout_constraintLeft_toRightOf="@id/tv_simple_login"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/btn_google_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logo_google"
            app:layout_constraintTop_toBottomOf="@id/tv_simple_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>