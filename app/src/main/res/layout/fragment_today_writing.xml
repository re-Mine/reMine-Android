<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".ui.home.TodayWritingFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/buttonBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="X"
                    android:textSize="24sp"
                    android:textColor="#8C8C8C"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024년 1월 21일"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/gowun_dodum_regular"
                    android:textColor="@color/black"
                    android:layout_weight="6"/>

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:textSize="20sp"
                    android:fontFamily="@font/gowun_dodum_regular"
                    android:textColor="#34A853"
                    android:layout_weight="1"/>
                </LinearLayout>

                <View
                    android:id="@+id/layoutLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="#BDBDBD" />

                <EditText
                    android:id="@+id/et_diary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:inputType="text"
                    android:gravity="top"
                    android:hint="오늘 하루를 기록해요!"
                    android:fontFamily="@font/gowun_dodum_regular"
                    android:textColor="#747474" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>