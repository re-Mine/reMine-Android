<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/declaration_item_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/viewpager_round"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contentDeclaration1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="건강한 선택이 내 힘과 행복의 원천이다." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/declarationCreationTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="2024.01.22" />

                <View
                    android:id="@+id/layoutLine"
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/declarationWritter1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="웃는 사자" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageProfile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:src="@drawable/profile_sample" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contentDeclaration2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="건강한 선택이 내 힘과 행복의 원천이다." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/declarationCreationTime2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="2024.01.22" />

                <View
                    android:id="@+id/layoutLine2"
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/declarationWritter2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="웃는 사자" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageProfile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:src="@drawable/profile_sample" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contentDeclaration3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="건강한 선택이 내 힘과 행복의 원천이다." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/declarationCreationTime3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="2024.01.22" />

                <View
                    android:id="@+id/layoutLine3"
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/declarationWritter3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="웃는 사자" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageProfile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:src="@drawable/profile_sample" />

    </LinearLayout>

</LinearLayout>