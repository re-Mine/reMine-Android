<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="#F9F9F9"
    tools:context="com.remine.ui.mypage.MypageFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마이페이지"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:fontFamily="@font/ibm_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리마인님,\n오늘도 파이팅 하세요!"
                    android:textColor="#1D1D1D"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    android:fontFamily="@font/ibm_medium"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_description"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cv_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cv_top"
                    android:background="@drawable/bg_mypage"
                    android:padding="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:id="@+id/tv_account_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="계정 정보"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:fontFamily="@font/ibm_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingBottom="15dp"/>
                    <ImageView
                        android:id="@+id/ic_nickname"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_account_title"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/btm_mypage"/>
                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임"
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/ibm_medium"
                        android:layout_marginStart="10dp"
                        android:paddingEnd="40dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_account_title"
                        app:layout_constraintStart_toEndOf="@id/ic_nickname"/>
                    <TextView
                        android:id="@+id/tv_my_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리마인"
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/ibm_medium"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_account_title"
                        app:layout_constraintStart_toEndOf="@id/tv_nickname"/>

                    <ImageView
                        android:id="@+id/ic_email"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_email"/>
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/ibm_medium"
                        android:layout_marginStart="10dp"
                        android:paddingEnd="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
                        app:layout_constraintStart_toEndOf="@id/ic_nickname"/>
                    <TextView
                        android:id="@+id/tv_my_email"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="remine@gmail.com"
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/ibm_medium"
                        android:layout_marginStart="10dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
                        app:layout_constraintStart_toEndOf="@id/tv_nickname"/>

                    <ImageView
                        android:id="@+id/ic_password"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_my_email"
                        app:layout_constraintStart_toStartOf="parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_password"/>
                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비밀번호 변경하기"
                        android:textSize="16sp"
                        android:textColor="#EA4335"
                        android:fontFamily="@font/ibm_medium"
                        android:layout_marginStart="10dp"
                        android:paddingEnd="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_my_email"
                        app:layout_constraintStart_toEndOf="@id/ic_password"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cv_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cv_account"
                android:background="@drawable/bg_mypage"
                android:padding="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_faq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="도움말 및 기타"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:fontFamily="@font/ibm_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingBottom="15dp"/>
                <ImageView
                    android:id="@+id/ic_cs"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_faq_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_cs"/>
                <TextView
                    android:id="@+id/tv_cs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:fontFamily="@font/ibm_medium"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_faq_title"
                    app:layout_constraintStart_toEndOf="@id/ic_cs"/>
                <TextView
                    android:id="@+id/tv_cs_email"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="replremine@gmail.com"
                    android:textSize="16sp"
                    android:textColor="#4285F4"
                    android:fontFamily="@font/ibm_medium"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_faq_title"
                    app:layout_constraintStart_toEndOf="@id/tv_cs"/>

                <ImageView
                    android:id="@+id/ic_version"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cs_email"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="5dp"
                    android:src="@drawable/ic_version"/>
                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="버전 정보"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:fontFamily="@font/ibm_medium"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cs_email"
                    app:layout_constraintStart_toEndOf="@id/ic_version"/>
                <TextView
                    android:id="@+id/tv_my_version"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="1.0.0"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:fontFamily="@font/ibm_medium"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cs_email"
                    app:layout_constraintStart_toStartOf="@id/tv_cs_email"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cv_faq"
                android:background="@drawable/bg_mypage_red"
                android:paddingTop="20dp"
                android:paddingBottom="100dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_login_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그인"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:fontFamily="@font/ibm_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingBottom="15dp"/>
                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃하기"
                    android:textColor="#EA4335"
                    android:textSize="16sp"
                    android:fontFamily="@font/ibm_medium"
                    app:layout_constraintTop_toBottomOf="@id/tv_login_title"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:id="@+id/tv_withdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회원 탈퇴하기"
                    android:textColor="#EA4335"
                    android:textSize="16sp"
                    android:fontFamily="@font/ibm_medium"
                    app:layout_constraintTop_toBottomOf="@id/tv_logout"
                    android:paddingBottom="15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>