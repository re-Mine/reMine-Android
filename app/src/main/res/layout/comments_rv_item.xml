<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_round"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/commentProfile1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:src="@drawable/profile_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commentNickName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="작성자 닉네임" />

                <TextView
                    android:id="@+id/commentCreationTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2분 전" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/commentContents1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:text="정말 크게 공감하고 갑니다. 사실 치료 보다는 저도 재활 시설을 꾸준히 다니는 게 정말 중요한 것 같아요." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_round"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/commentProfile2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:src="@drawable/profile_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commentNickName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="작성자 닉네임" />

                <TextView
                    android:id="@+id/commentCreationTime2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25분 전" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/commentContents2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:text="정말 옳은 말씀이에요. 제 동생도 재활 시설을 꾸준히 다니고 효과를 크게 봤거든요." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_round"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/commentProfile3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:src="@drawable/profile_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commentNickName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="작성자 닉네임" />

                <TextView
                    android:id="@+id/commentCreationTime3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="47분 전" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/commentContents3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:text="좋은 말씀 감사합니다. 재활 시설을 다니는 것에 대한 망설임이 있었는데 덕분에 고민이 좀 해결된 것 같아요." />

    </LinearLayout>


</LinearLayout>