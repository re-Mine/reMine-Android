<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/layout_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_center1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:src="@drawable/image_center1" />

            <TextView
                android:id="@+id/nameCenter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="경기도 가나다"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/ibm_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centerAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="경기도 가나시 다라면" />

            <TextView
                android:id="@+id/detailAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="마바사로 000번길 000" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSend1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#4FBE6D"
            android:background="@drawable/button_round"
            android:text="전송"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibm_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/layout_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_center2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:src="@drawable/image_center4" />

            <TextView
                android:id="@+id/nameCenter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="서울 라마바"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/ibm_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centerAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="서울 가나구 다라동 마바로 00" />

            <TextView
                android:id="@+id/detailAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="사아자 건물 00층" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSend2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#4FBE6D"
            android:background="@drawable/button_round"
            android:text="전송"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibm_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/layout_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_center3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:src="@drawable/image_center4" />

            <TextView
                android:id="@+id/nameCenter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="영남권 사아자"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/ibm_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centerAddress3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="부산광역시 가나구 다라로 00" />

            <TextView
                android:id="@+id/detailAddress3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="마바사 빌딩 00층" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSend3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#4FBE6D"
            android:background="@drawable/button_round"
            android:text="전송"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibm_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/layout_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_center4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:src="@drawable/image_center1" />

            <TextView
                android:id="@+id/nameCenter4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="충청권 차카타"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/ibm_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centerAddress4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="대전 가나구 다라로 00" />

            <TextView
                android:id="@+id/detailAddress4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_medium"
                android:text="마바사 건물 00층" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSend4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#4FBE6D"
            android:background="@drawable/button_round"
            android:text="전송"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibm_medium"/>

    </LinearLayout>

</LinearLayout>


